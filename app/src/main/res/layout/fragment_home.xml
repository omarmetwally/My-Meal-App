<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".Home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Popular meals section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Popular meals"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Horizontal scroll or RecyclerView for popular meals -->
        <!-- ... -->

        <!-- Category meals section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Category meals"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Horizontal scroll or RecyclerView for category meals -->
        <!-- ... -->

        <!-- Recommended meals section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Recommended meals"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Horizontal scroll or RecyclerView for recommended meals -->
        <!-- ... -->

        <!-- Areas section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Areas"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/areaRecView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- Horizontal scroll or RecyclerView for areas -->
        <!-- ... -->

    </LinearLayout>
</ScrollView>
