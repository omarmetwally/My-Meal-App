<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".IngredientSearchFragment">


    <ImageView
        android:id="@+id/btnBackImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/IngredientSearch"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/search_view"
        app:layout_constraintStart_toEndOf="@+id/btnBackImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="359dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"


        android:layout_marginBottom="20dp"
        android:background="@drawable/search_style"
        android:theme="@style/Widget.AppCompat.SearchView.ActionBar"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toTopOf="@+id/search_results_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:queryBackground="@android:color/transparent"
        app:searchIcon="@drawable/search"
        app:submitBackground="@android:color/transparent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recyclerview"
        android:layout_width="408dp"
        android:layout_height="588dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
